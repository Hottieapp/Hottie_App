<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="HOTTIE APP"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Pic Upload"
        android:textColor="@color/DarkGray" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="157dp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="50dp" >

        <ImageButton
            android:id="@+id/boys"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/girls"
            android:layout_marginRight="72dp"
            android:background="@null"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/circle1" />

        <ImageButton
            android:id="@+id/girls"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="38dp"
            android:layout_toLeftOf="@+id/boys"
            android:background="@null"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/circle1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/boys"
            android:layout_alignTop="@+id/boys"
            android:layout_marginRight="29dp"
            android:layout_marginTop="53dp"
            android:text="GIRL&apos;s\nCONTEST"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignRight="@+id/girls"
            android:layout_marginRight="29dp"
            android:text="BOY&apos;S\nCONTEST"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="376dp"
        android:layout_height="157dp"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp" >

        <ImageButton
            android:id="@+id/couples"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/circle1" />

        <ImageButton
            android:id="@+id/fests"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="33dp"
            android:layout_toRightOf="@+id/couples"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/circle1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/couples"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:text="FESTS"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignRight="@+id/fests"
            android:layout_marginRight="25dp"
            android:text="COUPLES"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <Button
        android:id="@+id/Register_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:background="@drawable/pic_camera" />

</RelativeLayout>