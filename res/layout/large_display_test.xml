<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="HOTTIE APP"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="28dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="380dp" >

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageButton
                android:id="@+id/fests"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fests"
                android:layout_below="@+id/textView1"
                android:layout_marginRight="33dp"
                android:text="GIRL&apos;s\nCONTEST"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/girls"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="33dp"
                android:layout_toRightOf="@+id/fests"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/girls"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:text="BOY&apos;S\nCONTEST"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/Register_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="REGISTER HERE" />

    <ImageButton
        android:id="@+id/couples"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignTop="@+id/boys"
        android:layout_marginLeft="35dp"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/circle1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toLeftOf="@+id/Register_id_button"
        android:text="FESTS"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/boys"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_below="@+id/scrollView1"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/circle1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/boys"
        android:layout_alignLeft="@+id/boys"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="25dp"
        android:text="COUPLES"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>